{
  "name": "cluely-lite-electron",
  "version": "0.1.0",
  "description": "Electron UI for Cluely-Lite (local-first)",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --mac",
    "prepack": "cd ../axhelper && swift build -c release || true"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "ai.cluely.lite",
    "productName": "Cluely-Lite",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../axhelper/.build/release/axhelper",
        "to": "axhelper",
        "filter": ["**/*"]
      }
    ]
  }
}
